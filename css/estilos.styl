
rosa = #FF5AA5
azul = #22BCE0
naranja = #DD4F24
verde = #22BC68

@import "fuentes.styl"

border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

body
	background-color #efefef
	font-size 16px
h1, h2, ul, p 
	padding 0
	margin 0
img
	width 100%
header
	background-color #444
	border-bottom 3px solid #2d2d2d
	overflow hidden
	padding 10px 0
	position fixed
	width 100%
	text-align center
	z-index:2

	#header_logo, #header_titulo, #header_user
		display inline-block
		vertical-align middle
	#header_logo, #header_user
		height	h = 74px
		width 74px
	#header_logo
		float left
		margin-left 20px
	#header_user
		border #2d2d2d solid 3px
		border-radius (40px)
		float right
		margin-right 10px
		overflow hidden
	#header_titulo
		width 50%
		a
			color azul
			text-decoration none
		a:hover
			color naranja
		h2
			color white
			font-weight bold
		li
			display inline
			margin 0 0.4em 0 0

#contenido
	overflow hidden
	padding 0 0 0 1.7%

	.contenido_item
		background-color white
		border solid 1px #efefef
		border-right 4px solid azul
		float left
		height 175px
		margin 1% 1% 0 0
		overflow hidden
		width 96%
		transition:border-color 0.3s;
		-webkit-transition:border-color 0.3s;

		figure
			float left
			height 175px
			margin 0 2em 0 0
			width 155px
		.item_info
			height 140px
			overflow hidden
			h2
				color #444
				font-weight bold
				font-style italic
				margin 25px 0 0 0
			.item_posted
				color #7a7a7a
				margin 0.2em 0
				a
					color naranja
					text-decoration none
				a:hover
					color azul
			.icon-heart-2
				color #a5a5a5
				cursor pointer
				font-size 1.2em
				transition:color 0.5s;
				-webkit-transition:color 0.5s;
			.icon-heart-2:hover
					color rosa

		.item_extra
			width 100%
			.extra_tag
				background-color azul
				border-radius (3px)
				color white
				float left
				padding 0.1em 0.3em
			.extra_likes
				float right
				margin 0 20px 0 0
				position relative
				top -6px
				
				*
					display inline
					vertical-align middle
				a
					text-decoration none
					font-size 1.8em

					.icon-arrow-up
						color verde
						position relative
						transition:top 0.3s;
						-webkit-transition:top 0.3s;
					.icon-arrow-up:hover
						top -4px
					.icon-arrow-down
						color naranja
						position relative
						transition:top 0.3s;
						-webkit-transition:top 0.3s;
					.icon-arrow-down:hover
						top 4px
				.likes_numero
					color #a5a5a5
	.contenido_item:hover
		border-color azul

@import "responsive.styl"